{
  "name": "@srtp/remix-core",
  "version": "1.0.0",
  "description": "remix convenience utilities",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "types:dev": "tsc --noEmit -p . --watch",
    "types": "tsc --noEmit -p .",
    "lint": "eslint --fix --max-warnings=0 --cache src --ext .ts,.tsx",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "test": "vitest run",
    "test:dev": "vitest dev",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@srtp/core": "workspace:*",
    "immer": "10.0.2",
    "react": "18.2.0",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "tslib": "2.5.3",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "1.17.0",
    "@srtp/tsconfig": "workspace:*",
    "@types/node": "20.2.5",
    "@types/react": "18.2.9",
    "cross-env": "7.0.3",
    "eslint": "8.42.0",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "tsup": "6.7.0",
    "turbo": "1.10.3",
    "typescript": "5.1.3",
    "vite": "4.3.9",
    "vitest": "0.32.0"
  }
}
