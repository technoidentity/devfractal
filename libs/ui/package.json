{
  "name": "@srtp/ui",
  "version": "0.0.1",
  "description": "reducer utilities for local state management",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "keywords": [],
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "types:dev": "tsc --noEmit -p . --watch",
    "types": "tsc --noEmit -p .",
    "lint": "eslint --fix --max-warnings=0 --cache src --ext .ts,.tsx",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "test": "vitest run && vitest typecheck --run",
    "test:dev": "vitest dev",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@mantine/form": "6.0.20",
    "@radix-ui/react-icons": "1.3.0",
    "@radix-ui/react-label": "2.0.2",
    "@radix-ui/react-slot": "1.0.2",
    "@srtp/core": "workspace:*",
    "@srtp/fn": "workspace:*",
    "@srtp/react": "workspace:*",
    "@srtp/ui-core": "workspace:*",
    "@tanstack/react-table": "8.10.3",
    "class-variance-authority": "0.7.0",
    "clsx": "2.0.0",
    "date-fns": "2.30.0",
    "immer": "10.0.2",
    "lucide-react": "0.279.0",
    "react": "18.2.0",
    "react-day-picker": "8.8.2",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.11",
    "tailwind-merge": "1.14.0",
    "tailwindcss-animate": "1.0.7",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "tslib": "2.6.2",
    "use-immer": "0.9.0",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@srtp/tsconfig": "workspace:*",
    "@testing-library/jest-dom": "6.1.3",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.5.1",
    "@types/node": "20.7.0",
    "@types/react": "18.2.23",
    "@types/react-dom": "18.2.8",
    "@types/testing-library__jest-dom": "6.0.0",
    "cross-env": "7.0.3",
    "eslint": "8.50.0",
    "eslint-config-srtp": "workspace:*",
    "prettier": "3.0.3",
    "rimraf": "5.0.5",
    "tailwindcss": "3.3.3",
    "tsup": "7.2.0",
    "typescript": "5.2.2",
    "vitest": "0.34.5"
  }
}
