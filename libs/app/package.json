{
  "name": "@srtp/app",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "keywords": [],
  "author": "Pervez Iqbal",
  "license": "ISC",
  "scripts": {
    "update": "pnpm ncu -u",
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "types": "tsc --noEmit -p .",
    "types:dev": "tsc --noEmit -p . --watch",
    "lint": "eslint \"src/**/*.ts*\"",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "test": "vitest run",
    "test:dev": "vitest dev",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@chakra-ui/react": "2.4.6",
    "@chakra-ui/styled-system": "2.5.1",
    "@emotion/react": "11.10.5",
    "@emotion/styled": "11.10.5",
    "@srtp/core": "workspace:*",
    "@srtp/reducer": "workspace:*",
    "@srtp/ui": "workspace:*",
    "@tanstack/react-query": "4.20.4",
    "@vitejs/plugin-react": "3.0.0",
    "framer-motion": "8.0.2",
    "immer": "9.0.16",
    "jotai-tanstack-query": "0.4.0",
    "jotai": "1.12.1",
    "react-dom": "18.2.0",
    "react-error-boundary": "3.1.4",
    "react": "18.2.0",
    "redaxios": "0.5.1",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "ts-essentials": "9.3.0",
    "tslib": "2.4.1",
    "use-immer": "0.8.1",
    "zod": "3.20.2"
  },
  "devDependencies": {
    "@srtp/tsconfig": "workspace:*",
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "cross-env": "7.0.3",
    "eslint": "8.31.0",
    "eslint-config-srtp": "workspace:*",
    "prettier": "2.8.1",
    "tsup": " 6.5.0",
    "typescript": "4.9.4"
  }
