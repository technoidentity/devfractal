{
  "name": "@srtp/validator",
  "version": "1.0.0",
  "description": "thin wrapper around zod for validating forms",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "keywords": [],
  "author": "Pervez Iqbal",
  "license": "MIT",
  "scripts": {
    "upd": "pnpm ncu -u",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "types:dev": "tsc --noEmit -p . --watch",
    "types": "tsc --noEmit -p .",
    "lint": "eslint --max-warnings=0 --cache --cache-location ./node_modules/.cache/eslint src --ext ts,tsx",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "test": "vitest run",
    "test:dev": "vitest dev",
    "coverage": "vitest run --coverage",
    "clean": "rimraf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "immer": "9.0.19",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "ts-essentials": "9.3.0",
    "tslib": "2.5.0",
    "@srtp/core": "workspace:*",
    "zod": "3.20.6"
  },
  "devDependencies": {
    "@srtp/tsconfig": "workspace:*",
    "@types/node": "18.14.2",
    "cross-env": "7.0.3",
    "eslint-config-srtp": "workspace:*",
    "eslint": "8.35.0",
    "prettier": "2.8.4",
    "rimraf": "4.1.2",
    "tsup": "6.6.3",
    "typescript": "4.9.5",
    "vitest": "0.29.2"
  }
}
