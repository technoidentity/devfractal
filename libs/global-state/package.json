{
  "name": "@srtp/global-state",
  "version": "1.0.0",
  "description": "convenient utility functions for jotai",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "keywords": [],
  "author": "Pervez Iqbal",
  "license": "MIT",
  "scripts": {
    "upd": "pnpm ncu -u",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "types:dev": "tsc --noEmit -p . --watch",
    "types": "tsc --noEmit -p .",
    "lint": "eslint --fix --max-warnings=0 --cache src --ext .ts,.tsx",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "test": "vitest run",
    "test:dev": "vitest dev",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@srtp/core": "workspace:*",
    "@srtp/spec": "workspace:*",
    "@srtp/local-state": "workspace:*",
    "immer": "9.0.21",
    "jotai": "2.0.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "tslib": "2.5.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@srtp/tsconfig": "workspace:*",
    "@types/node": "18.15.11",
    "@types/react": "18.0.35",
    "@types/react-dom": "18.0.11",
    "cross-env": "7.0.3",
    "eslint": "8.38.0",
    "eslint-config-srtp": "workspace:*",
    "prettier": "2.8.7",
    "tsup": "6.7.0",
    "typescript": "5.0.4",
    "vitest": "0.30.1"
  }
}
