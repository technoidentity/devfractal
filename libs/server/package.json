{
  "name": "@srtp/server",
  "version": "1.0.0",
  "description": "core utilities for web course projects",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "keywords": [],
  "author": "Pervez Iqbal",
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "types:dev": "tsc --noEmit -p . --watch",
    "types": "tsc --noEmit -p .",
    "lint": "eslint --fix --max-warnings=0 --cache src --ext .ts,.tsx",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "test": "vitest run",
    "test:dev": "vitest dev",
    "coverage": "vitest run --coverage",
    "clean": "rimraf .turbo node_modules dist"
  },
  "dependencies": {
    "@srtp/endpoint": "workspace:*",
    "@srtp/fn": "workspace:*",
    "@srtp/result": "workspace:*",
    "@srtp/spec": "workspace:*",
    "hono": "3.4.1",
    "http-status-codes": "2.2.0",
    "immer": "10.0.2",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "tslib": "2.6.1",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@srtp/tsconfig": "workspace:*",
    "@types/node": "20.4.9",
    "cross-env": "7.0.3",
    "eslint": "8.46.0",
    "eslint-config-srtp": "workspace:*",
    "prettier": "3.0.1",
    "rimraf": "5.0.1",
    "tsup": "7.2.0",
    "typescript": "5.1.6",
    "vitest": "0.34.1"
  }
}
