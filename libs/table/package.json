{
  "name": "@srtp/table",
  "version": "1.0.0",
  "description": "table for react",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "keywords": [],
  "author": "Pervez Iqbal",
  "license": "ISC",
  "scripts": {
    "upd": "pnpm ncu -u",
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "types:dev": "tsc --noEmit -p . --watch",
    "types": "tsc --noEmit -p .",
    "test": "vitest run",
    "test:dev": "vitest dev",
    "coverage": "vitest run --coverage",
    "lint": "eslint --max-warnings=0 --cache --cache-location ./node_modules/.cache/eslint src --ext ts,tsx",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@emotion/react": "11.10.6",
    "@mantine/core": "5.10.5",
    "@srtp/core": "workspace:*",
    "@srtp/local-state": "workspace:*",
    "@tabler/icons-react": "2.6.0",
    "immer": "9.0.19",
    "lodash": "4.17.21",
    "lodash-es": "4.17.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "4.7.1",
    "tabler-icons-react": "1.56.0",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "tslib": "2.5.0",
    "type-fest": "3.6.1",
    "use-immer": "0.8.1",
    "zod": "3.20.6"
  },
  "devDependencies": {
    "@srtp/tsconfig": "workspace:*",
    "@types/lodash": "4.14.191",
    "@types/lodash-es": "4.17.6",
    "@types/node": "18.14.2",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "cross-env": "7.0.3",
    "eslint": "8.35.0",
    "eslint-config-srtp": "workspace:*",
    "prettier": "2.8.4",
    "tsup": "6.6.3",
    "typescript": "4.9.5",
    "vitest": "0.29.2"
  }
}
