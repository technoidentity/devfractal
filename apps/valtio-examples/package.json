{
  "name": "valtio-examples",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "upd": "pnpm ncu -u",
    "preinstall": "npx only-allow pnpm",
    "build": "vite build",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "coverage": "vitest run --coverage",
    "db": "json-server ./db.js",
    "deploy": "vercel deploy dist --team=turborepo --confirm",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "lint": "eslint \"src/**/*.ts*\"",
    "serve": "vite preview",
    "test:dev": "vitest dev",
    "test": "vitest run",
    "types:dev": "tsc --noEmit -p . --watch",
    "types": "tsc --noEmit -p .",
    "dev": "vite --host 0.0.0.0 --port 3001 --clearScreen false"
  },
  "dependencies": {
    "@chakra-ui/react": "2.4.9",
    "@chakra-ui/styled-system": "2.5.1",
    "@emotion/react": "11.10.5",
    "@emotion/styled": "11.10.5",
    "@srtp/core": "workspace:*",
    "@srtp/local-state": "workspace:*",
    "@srtp/todo": "workspace:*",
    "framer-motion": "8.5.5",
    "immer": "9.0.19",
    "jotai": "2.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "3.1.4",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "ts-essentials": "9.3.0",
    "tslib": "2.5.0",
    "use-immer": "0.8.1",
    "valtio": "1.9.0",
    "zod": "3.20.2"
  },
  "devDependencies": {
    "@srtp/tsconfig": "workspace:*",
    "@testing-library/react": "13.4.0",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@vitejs/plugin-react": "3.0.1",
    "cross-env": "7.0.3",
    "eslint": "8.33.0",
    "eslint-config-srtp": "workspace:*",
    "npm-check-updates": "16.6.3",
    "prettier": "2.8.3",
    "rimraf": "4.1.2",
    "typescript": "4.9.5",
    "vite": "4.0.4",
    "vitest": "0.28.3"
  }
}
