{
  "name": "valtio-examples",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "vite build",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "coverage": "vitest run --coverage",
    "db": "json-server ./db.js",
    "deploy": "vercel deploy dist --team=turborepo --confirm",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "lint": "eslint --max-warnings=0 --cache src tests --ext .ts,.tsx",
    "serve": "vite preview",
    "test:dev": "vitest dev",
    "test": "vitest run",
    "types:dev": "tsc --noEmit -p . --watch",
    "types": "tsc --noEmit -p .",
    "dev": "vite --host 0.0.0.0 --port 3001 --clearScreen false"
  },
  "dependencies": {
    "@chakra-ui/react": "2.6.0",
    "@chakra-ui/styled-system": "2.9.0",
    "@emotion/react": "11.10.8",
    "@emotion/styled": "11.10.8",
    "@srtp/core": "workspace:*",
    "@srtp/local-state": "workspace:*",
    "@srtp/todo": "workspace:*",
    "framer-motion": "10.12.4",
    "immer": "10.0.1",
    "jotai": "2.0.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.4",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "tslib": "2.5.0",
    "use-immer": "0.9.0",
    "valtio": "1.10.4",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@srtp/tsconfig": "workspace:*",
    "@testing-library/react": "14.0.0",
    "@types/node": "18.16.2",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.1",
    "@vitejs/plugin-react": "4.0.0",
    "cross-env": "7.0.3",
    "eslint": "8.39.0",
    "eslint-config-srtp": "workspace:*",
    "prettier": "2.8.8",
    "rimraf": "5.0.0",
    "typescript": "5.0.4",
    "vite": "4.3.3",
    "vitest": "0.30.1"
  }
}
