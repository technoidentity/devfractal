{
  "name": "tasks",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf .turbo node_modules dist",
    "types:dev": "tsc --noEmit -p . --watch",
    "types": "tsc --noEmit -p .",
    "build": "remix build",
    "dev": "npm-run-all build --parallel \"dev:*\"",
    "dev:node": "cross-env NODE_ENV=development nodemon --require dotenv/config ./server.ts --watch ./server.ts",
    "dev:remix": "remix watch",
    "lint": "eslint --report-unused-disable-directives --max-warnings=0 --cache src --ext .ts,.tsx",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "start": "cross-env NODE_ENV=production node ./server.js"
  },
  "dependencies": {
    "@remix-run/express": "2.0.1",
    "@remix-run/node": "2.0.1",
    "@remix-run/react": "2.0.1",
    "better-sqlite3": "8.6.0",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "drizzle-orm": "0.28.6",
    "express": "4.18.2",
    "immer": "10.0.2",
    "isbot": "3.7.0",
    "morgan": "1.10.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "tslib": "2.6.2",
    "type-fest": "4.3.2",
    "use-immer": "0.9.0",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@remix-run/dev": "2.0.1",
    "@remix-run/eslint-config": "2.0.1",
    "@types/better-sqlite3": "7.6.5",
    "@types/compression": "1.7.3",
    "@types/express": "4.17.18",
    "@types/morgan": "1.9.6",
    "@types/node": "20.7.0",
    "@types/react": "18.2.23",
    "@types/react-dom": "18.2.8",
    "dotenv": "16.3.1",
    "drizzle-kit": "0.19.13",
    "eslint": "8.50.0",
    "nodemon": "3.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "rimraf": "5.0.5",
    "tailwindcss": "3.3.3",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">=14"
  }
}
