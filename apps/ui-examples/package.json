    "confusing-browser-globals": "1.0.11",
    "cross-env": "7.0.3",
    "eslint-config-next": "13.4.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-tailwindcss": "3.12.0",
    "eslint": "8.41.0",
    "postcss": "8.4.24",
