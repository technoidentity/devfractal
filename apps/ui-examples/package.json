    "@srtp/local-state": "workspace:*",
    "@srtp/spec": "workspace:*",
    "@srtp/todo": "workspace:*",
    "@srtp/validator": "workspace:*",
    "class-variance-authority": "0.6.0",
    "clsx": "1.2.1",
    "lucide-react": "0.224.0",
    "next-themes": "0.2.1",
    "next": "13.4.4",
    "react-dom": "18.2.0",
    "react": "18.2.0",
    "sharp": "0.32.1",
