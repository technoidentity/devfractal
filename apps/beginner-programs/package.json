{
  "name": "beginner-programs",
  "version": "0.0.1",
  "scripts": {
    "upd": "pnpm ncu -u",
    "build": "vite build",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "coverage": "vitest run --coverage",
    "db": "json-server ./db.js",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "lint": "eslint \"src/**/*.ts*\"",
    "serve": "vite preview",
    "test:dev": "vitest dev",
    "test": "vitest run",
    "types:dev": "tsc --noEmit -p . --watch ",
    "types": "tsc --noEmit -p .",
    "dev": "vite --host 0.0.0.0 --port 3001 --clearScreen false"
  },
  "dependencies": {
    "immer": "9.0.17",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "ts-essentials": "9.3.0",
    "tslib": "2.4.1",
    "zod": "3.20.2"
  },
  "exclude": [
    "**/tests/*.test.ts"
  ],
  "devDependencies": {
    "@srtp/tsconfig": "workspace:*",
    "@vitejs/plugin-react": "3.0.1",
    "@types/node": "18.11.18",
    "cross-env": "7.0.3",
    "eslint": "8.32.0",
    "npm-check-updates": "16.6.2",
    "prettier": "2.8.3",
    "rimraf": "4.0.5",
    "eslint-config-srtp": "workspace:*",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vitest": "0.27.1"
  }
}
