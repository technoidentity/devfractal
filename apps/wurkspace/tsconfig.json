{
  "extends": "@srtp/tsconfig/next.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@examples/*": ["src/examples/*"],
      "@ui/*": ["src/ui/*"],
      "@core/*": ["src/core/*"],
      "@db/*": ["src/db/*"],
      "@fake/*": ["src/fake/*"],
      "@specs/*": ["src/specs/*"]
    },
    "target": "ESNext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../libs/next/src/handler.ts",
    "../../libs/next/src/response.ts",
    "../../libs/next/src/getAuth.ts",
    "../../libs/next/src/prisma.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
