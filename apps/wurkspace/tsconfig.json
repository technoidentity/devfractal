{
  "extends": "@srtp/tsconfig/next.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@examples/*": ["src/examples/*"],
      "@ui/*": ["src/ui/*"],
      "@core/*": ["src/core/*"],
      "@db/*": ["src/db/*"],
      "@fake/*": ["src/fake/*"],
      "@specs/*": ["src/specs/*"],
      "@prisma/client": ["./src/prisma-client"]
    },
    "target": "ESNext",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "mocks", "__previewjs__"],
  "exclude": ["node_modules", ".next"]
}
