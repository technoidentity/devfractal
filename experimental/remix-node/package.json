{
  "name": "@srtp/remix-node",
  "version": "0.0.1",
  "description": "remix convenience utilities",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "keywords": [],
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "types:dev": "tsc --noEmit -p . --watch",
    "types": "tsc --noEmit -p .",
    "lint": "eslint --fix --max-warnings=0 --cache src --ext .ts,.tsx",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "test": "vitest run && vitest typecheck --run",
    "test:dev": "vitest dev",
    "coverage": "vitest run --coverage",
    "clean": "rimraf .turbo node_modules dist"
  },
  "dependencies": {
    "@remix-run/node": "2.0.1",
    "@srtp/core": "workspace:*",
    "@srtp/remix-core": "workspace:*",
    "immer": "10.0.2",
    "query-string": "8.1.0",
    "superjson": "1.13.1",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "tslib": "2.6.2",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "2.0.1",
    "@srtp/tsconfig": "workspace:*",
    "@types/node": "20.7.0",
    "cross-env": "7.0.3",
    "eslint": "8.50.0",
    "prettier": "3.0.3",
    "rimraf": "5.0.5",
    "tsup": "7.2.0",
    "turbo": "1.10.14",
    "typescript": "5.2.2",
    "vite": "4.4.9",
    "vitest": "0.34.5"
  }
}
