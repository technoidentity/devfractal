{
  "name": "@srtp/mantine",
  "version": "0.0.1",
  "description": "common utility hooks for react",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "keywords": [],
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "types:dev": "tsc --noEmit -p . --watch",
    "types": "tsc --noEmit -p .",
    "test": "vitest run && vitest typecheck --run",
    "test:dev": "vitest dev",
    "coverage": "vitest run --coverage",
    "lint": "eslint --fix --max-warnings=0 --cache src --ext .ts,.tsx",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@mantine/core": "6.0.20",
    "@mantine/dates": "6.0.20",
    "@mantine/form": "6.0.20",
    "@srtp/core": "workspace:*",
    "@srtp/fn": "workspace:*",
    "@srtp/react": "workspace:*",
    "@srtp/web": "workspace:*",
    "@tabler/icons-react": "2.38.0",
    "immer": "10.0.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "tslib": "2.6.2",
    "type-fest": "4.3.3",
    "use-immer": "0.9.0",
    "uuid": "9.0.1",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@srtp/tsconfig": "workspace:*",
    "@types/node": "20.8.0",
    "@types/react": "18.2.24",
    "@types/react-dom": "18.2.8",
    "cross-env": "7.0.3",
    "eslint": "8.50.0",
    "eslint-config-srtp": "workspace:*",
    "prettier": "3.0.3",
    "rimraf": "5.0.5",
    "tsup": "7.2.0",
    "typescript": "5.2.2",
    "vitest": "0.34.6"
  }
}
