{
  "name": "@srtp/conform",
  "version": "0.0.1",
  "description": "common utility hooks for react",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "keywords": [],
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "types:dev": "tsc --noEmit -p . --watch",
    "types": "tsc --noEmit -p .",
    "test": "vitest run && vitest typecheck --run",
    "test:dev": "vitest dev",
    "coverage": "vitest run --coverage",
    "lint": "eslint --fix --max-warnings=0 --cache src --ext .ts,.tsx",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@conform-to/dom": "0.8.2",
    "@conform-to/react": "0.8.2",
    "@conform-to/zod": "0.8.2",
    "@srtp/core": "workspace:*",
    "@srtp/react": "workspace:*",
    "@srtp/router": "workspace:^",
    "@srtp/web": "workspace:*",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.15.0",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "tslib": "2.6.2",
    "uuid": "9.0.0",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@srtp/tsconfig": "workspace:*",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "cross-env": "7.0.3",
    "eslint": "8.48.0",
    "eslint-config-srtp": "workspace:*",
    "prettier": "3.0.3",
    "rimraf": "5.0.1",
    "tsup": "7.2.0",
    "typescript": "5.2.2",
    "vitest": "0.34.3"
  }
}
