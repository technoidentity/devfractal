{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "NEXT_PUBLIC_API_MOCKING"],
  "globalDependencies": [".env", ".env.development", ".env.dev"],

  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["types", "dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "outputs": []
    },
    "upd": {
      "outputs": []
    },
    "types": {
      "dependsOn": ["^types"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": []
    }
  }
}
