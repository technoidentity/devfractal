{
  "devDependencies": {
    "eslint": "^8.31.0",
    "husky": "8.0.2",
    "npm-check-updates": "16.6.2",
    "turbo": "1.6.3",
    "typescript": "4.9.4"
  },
  "scripts": {
    "update": "pnpm add -g @pnpm/exe; pnpm turbo update",
    "types": "pnpm turbo types",
    "lint": "pnpm turbo lint",
    "build": "pnpm turbo build --filter=!@srtp/wurkspace",
    "test": "pnpm turbo test --filter=!@srtp/wurkspace ",
    "dev": "pnpm turbo dev --filter=!@srtp/wurkspace",
    "types:lib": "pnpm turbo types --filter=./libs/*",
    "lint:lib": "pnpm turbo lint --filter=./libs/*",
    "build:lib": "pnpm turbo build --filter=./libs/*",
    "test:lib": "pnpm turbo test --filter=./libs/*",
    "dev:lib": "pnpm turbo dev --filter=./libs/*",
    "clean": "pnpm turbo clean",
    "ci": "pnpm turbo types lint",
    "prepare": "husky install"
  }
}
