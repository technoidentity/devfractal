{
  "name": "@srtp/vite-starter",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "rimraf .turbo node_modules dist",
    "dev": "vite --port 3000",
    "build": "pnpm types && vite build",
    "serve": "vite preview",
    "lint": "eslint --report-unused-disable-directives --max-warnings=0 --cache src tests --ext .ts,.tsx",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "types": "tsc --noEmit -p .",
    "types:dev": "tsc --noEmit -p . --watch",
    "test": "vitest run",
    "test:dev": "vitest dev",
    "coverage": "vitest run --coverage",
    "cd": "pnpm turbo lint types test"
  },
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@mantine/core": "6.0.17",
    "@mantine/dates": "6.0.17",
    "@mantine/form": "6.0.17",
    "@mantine/hooks": "6.0.17",
    "@mantine/notifications": "6.0.17",
    "@tanstack/react-query": "4.32.0",
    "dayjs": "1.11.9",
    "immer": "10.0.2",
    "jotai": "2.2.2",
    "jotai-tanstack-query": "0.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.10",
    "react-hot-toast": "2.4.1",
    "react-router-dom": "6.14.2",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "tslib": "2.6.0",
    "use-immer": "0.9.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@testing-library/react": "14.0.0",
    "@types/node": "20.4.4",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "@vitejs/plugin-react-swc": "3.3.2",
    "confusing-browser-globals": "1.0.11",
    "cross-env": "7.0.3",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-react": "7.33.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-unicorn": "48.0.0",
    "msw": "1.2.3",
    "prettier": "3.0.0",
    "rimraf": "5.0.1",
    "turbo": "1.10.9",
    "typescript": "5.1.6",
    "vite": "4.4.6",
    "vitest": "0.33.0"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
