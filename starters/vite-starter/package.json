{
  "name": "@srtp/vite-starter",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "rimraf .turbo node_modules dist",
    "dev": "vite --port 3000",
    "build": "pnpm types && vite build",
    "serve": "vite preview",
    "lint": "eslint --report-unused-disable-directives --max-warnings=0 --cache src tests --ext .ts,.tsx",
    "lint:dev": "cross-env TIMING=1 pnpm lint --quiet --fix",
    "types": "tsc --noEmit -p .",
    "types:dev": "tsc --noEmit -p . --watch",
    "test": "vitest run && vitest typecheck --run",
    "test:types": "vitest typecheck --run",
    "test:types:dev": "vitest typecheck",
    "test:dev": "vitest dev",
    "coverage": "vitest run --coverage",
    "validate": "pnpm turbo lint types test"
  },
  "dependencies": {
    "@mantine/form": "6.0.20",
    "@mantine/hooks": "6.0.20",
    "@tanstack/react-query": "4.35.3",
    "immer": "10.0.2",
    "jotai": "2.4.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.11",
    "react-router-dom": "6.16.0",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "tslib": "2.6.2",
    "use-immer": "0.9.0",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@testing-library/react": "14.0.0",
    "@types/node": "20.6.4",
    "@types/react": "18.2.22",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "@typescript-eslint/parser": "6.7.2",
    "@vitejs/plugin-react-swc": "3.3.2",
    "autoprefixer": "10.4.16",
    "confusing-browser-globals": "1.0.11",
    "cross-env": "7.0.3",
    "eslint": "8.50.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-unicorn": "48.0.1",
    "msw": "1.3.1",
    "postcss": "8.4.30",
    "prettier": "3.0.3",
    "rimraf": "5.0.1",
    "tailwindcss": "3.3.3",
    "turbo": "1.10.14",
    "typescript": "5.2.2",
    "vite": "4.4.9",
    "vitest": "0.34.5"
  },
  "msw": {
    "workerDirectory": "public"
  }
}
