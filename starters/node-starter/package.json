{
  "name": "node-starter",
  "version": "1.0.0",
  "description": "node starter project",
  "main": "index.js",
  "scripts": {
    "upd": "pnpm ncu -u",
    "clean": "rimraf .turbo node_modules dist",
    "build": "npx tsc -p .",
    "types": "npx tsc -p .",
    "types:dev": "tsc --noEmit -p . --watch",
    "lint": "npx xo",
    "test": "vitest run",
    "test:dev": "vitest",
    "dev": "nodemon -x tsx src/index.ts",
    "ci": "pnpm turbo build lint test"
  },
  "author": "Pervez Iqbal",
  "license": "ISC",
  "dependencies": {
    "chance": "1.1.11",
    "immer": "9.0.19",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@types/chance": "1.1.3",
    "@types/node": "18.15.3",
    "esbuild": "0.17.11",
    "esbuild-register": "3.4.2",
    "eslint": "8.36.0",
    "nodemon": "2.0.21",
    "prettier": "2.8.4",
    "tsx": "3.12.5",
    "turbo": "1.8.3",
    "typescript": "4.9.5",
    "vitest": "0.29.2",
    "xo": "0.53.1"
  },
  "xo": {
    "ignores": [
      "**/node_modules/**",
      "**/dist/**",
      "**/*.test.(ts|js)"
    ],
    "space": true,
    "semi": true,
    "arrowParens": "avoid",
    "rules": {
      "@typescript-eslint/semi": "off",
      "import/extensions": "off"
    }
  }
}
