{
  "name": "node-starter",
  "version": "1.0.0",
  "description": "node starter project",
  "main": "index.js",
  "scripts": {
    "upd": "pnpm ncu -u",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "build": "npx tsc -p .",
    "types": "npx tsc -p .",
    "types:dev": "tsc --noEmit -p . --watch",
    "tcd": "npx tsc -p . --watch",
    "lint": " npx xo",
    "test": "npx tap --node-arg='--require=esbuild-register'",
    "test:dev": "pnpm test -- --watch",
    "rs": "node -r esbuild-register",
    "ro": "node -r esbuild-register src/index.ts",
    "dev": "nodemon -x node -r esbuild-register src/index.ts",
    "ci": "pnpm turbo build lint test"
  },
  "author": "Pervez Iqbal",
  "license": "ISC",
  "dependencies": {
    "chance": "1.1.9",
    "got": "12.5.3",
    "immer": "9.0.18",
    "lodash": "4.17.21",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "zod": "3.20.2"
  },
  "devDependencies": {
    "@types/chance": "1.1.3",
    "@types/lodash": "4.14.191",
    "@types/node": "18.11.18",
    "@types/tap": "15.0.7",
    "esbuild": "0.17.4",
    "esbuild-register": "3.4.2",
    "eslint": "8.32.0",
    "nodemon": "2.0.20",
    "prettier": "2.8.3",
    "tap": "16.3.4",
    "turbo": "1.7.0",
    "typescript": "4.9.4",
    "vitest": "0.28.1",
    "webpack": "5.75.0",
    "xo": "0.53.1"
  },
  "xo": {
    "ignores": [
      "**/node_modules/**",
      "**/dist/**",
      "**/*.test.(ts|js)"
    ],
    "space": true,
    "semi": true,
    "arrowParens": "avoid",
    "rules": {
      "@typescript-eslint/semi": "off",
      "import/extensions": "off"
    }
  }
}
