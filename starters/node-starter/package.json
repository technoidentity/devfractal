{
  "name": "node-starter",
  "version": "0.0.1",
  "description": "node starter project",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf .turbo node_modules dist",
    "build": "npx tsc -p .",
    "types": "npx tsc -p .",
    "types:dev": "tsc --noEmit -p . --watch",
    "lint": "npx xo",
    "test": "vitest run && vitest typecheck --run",
    "test:dev": "vitest",
    "dev": "nodemon -x tsx src/index.ts",
    "validate": "pnpm turbo build lint test"
  },
  "license": "MIT",
  "dependencies": {
    "chance": "1.1.11",
    "immer": "10.0.2",
    "tiny-invariant": "1.3.1",
    "tiny-warning": "1.0.3",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@types/chance": "1.1.4",
    "@types/node": "20.6.4",
    "esbuild": "0.19.3",
    "esbuild-register": "3.5.0",
    "eslint": "8.50.0",
    "nodemon": "3.0.1",
    "prettier": "3.0.3",
    "rimraf": "5.0.1",
    "tsx": "3.12.10",
    "turbo": "1.10.14",
    "typescript": "5.2.2",
    "vitest": "0.34.5",
    "xo": "0.56.0"
  },
  "xo": {
    "ignores": [
      "**/node_modules/**",
      "**/dist/**",
      "**/*.test.(ts|js)"
    ],
    "space": true,
    "semi": true,
    "arrowParens": "avoid",
    "rules": {
      "@typescript-eslint/semi": "off",
      "import/extensions": "off"
    }
  }
}
