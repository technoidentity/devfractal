generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Video {
  id          String @id @default(cuid())
  url         String
  title       String
  description String
  Course      Course @relation(fields: [courseId], references: [id])
  courseId    String
}

model Course {
  id          String  @id @default(cuid())
  title       String
  description String
  videos      Video[]
}

model User {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  username     String   @unique
  passwordHash String
}
